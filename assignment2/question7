#include<iostream>
using namespace std;

int inversions(int arr[],int n)
{
    int count = 0;
    
    for(int i = 0; i<n-1; i++)
    {
        for(int j = i + 1; j<n; j++)
        {
            if(arr[i] > arr[j])
            {
                count = count +  1;
            }
        }
    }
    return count;
}

int main()
{   int arr[1000],n;
    cout<<"Enter size of  array : ";
    cin>>n;

    cout<<"Enter the array : ";
    for(int i = 0 ; i<n ; i++)
    {
        cin>>arr[i];
    }

    cout<<endl;

    cout<< "Number of inversions are : "<< inversions(arr, n);


}
