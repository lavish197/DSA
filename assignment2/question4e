#include<iostream>
using namespace std;

void toLowercase(char str[]) {
    int i = 0;
    while (str[i] != '\0') {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] = str[i] + 32; 
        }
        i++;
    }
}

int main()
{
char str1[100];
cout << "Enter a string: ";
cin.getline(str1, 100);   
cout << "You entered: " << str1;

toLowercase(str1);

cout<<endl<<"resultant string is "<<str1;
}
