#include<iostream>
using namespace std;

void reverseString(char str[]) {
    int len = 0;
    while (str[len] != '\0') len++;

    for (int i = 0, j = len - 1; i < j; i++, j--) {
        char temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}


int main()
{
char str1[100];
cout << "Enter a string: ";
cin.getline(str1, 100);   
cout << "You entered: " << str1;
reverseString(str1);

cout<<endl<<"Reversed String is : "<<str1;
}
