#include<iostream>
using namespace std;

void deleteVowels(char str[]) {

    
    int i = 0, j = 0;
    while (str[i] != '\0') {
        char ch = str[i];
        if (!(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u'|| ch=='A'||ch=='E'||ch=='I'||ch=='O'||ch=='U')) {
            str[j++] = str[i];

        }
        i++;
    }
    str[j] = '\0';
}

int main()
{
char str1[100];
cout << "Enter a string: ";
cin.getline(str1, 100);   
cout << "You entered: " << str1;

deleteVowels(str1);

cout<<endl<<"Without vowels : "<<str1;
}
