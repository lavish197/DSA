#include<iostream>
#include<string>
using namespace std;
class reverse{
    public:
    char *arr;
    int size;
    int top;
    reverse(int n){
        size=n;
        arr=new char[size];
        top=-1;
    }
    void push(char ch){
        if(top==size-1){
            cout<<"stack is overflow"<<endl;
        }
        else{
            top++;
            arr[top]=ch;
        }
    }
    char pop(){
        if(top==-1){
            cout<<"stack underflow"<<endl;
            return -1;
        }
        else{
            char ans=arr[top];
            top--;
            return ans;
        }
        
    }
    char peek(){
      if(top==-1){
        cout<<"stack is underflow"<<endl;
      }
      else{
        return arr[top];
      }
    }
};
int main(){
    string s="hello";
    reverse r(10);
    for(int i=0;i!=s.length();i++){
       r.push(s[i]);
    }
    while(r. top!=-1){
        cout<<r.peek();
        r.pop();
    }

    

}
