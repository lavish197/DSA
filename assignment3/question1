#include<iostream>
using namespace std;
class stack{
    public:
    int top;
    int size;
    int *arr;
    bool isempty(){
        if(top>=0){
            
            return false;
        }
        else{
           
            return true;
        }

    }
    bool isfull(){
        if(top==size-1){
            
            return true;
        }
        else{
            return false;
        }
    }
    void push(int x){
        if(isfull()){
            cout<<"stack is overflow"<<endl;
        }
        else{
            top++;
            arr[top]=x;
        }
    }
    void pop(){
        if(isempty()){
            cout<<"stack is underflow"<<endl;
        }
        else{
            top--;
        }
    }
    void peek(){
        if(top>=0){
            cout<<"the peek element is "<<arr[top]<<endl;
        }
    }
stack(int size){
    this->size=size;
    arr=new int[size];
    top=-1;
}
};
int main(){
   stack s(5);
   s.push(10);
   s.push(20);
   s.push(30);
   s.peek();
   s.pop();
   s.pop();
   s.peek();

}
