#include<iostream>
using namespace std;
class stack{
     public:
    char *arr;
    int top;
    int size;
    stack(int n){
        size=n;
        arr=new char[size];
        top=-1;
    }
    void push(char x){
        if(top==size-1){
            cout<<"queue is full"<<endl;
        }
        else{
            top++;
            arr[top]=x;
        }
    }
    void pop(){
        if(top==-1){
            cout<<"queue is empty"<<endl;
        }
        else{
            top--;
        }
    }
    int peek(){
        if(top==-1){
            cout<<"stack is empty"<<endl;
        }
        else{
            return arr[top];
        }
        return -1;
    }
    // bool isbalanced(){

    // }
};
int main(){
    string str;
    stack s(10);
    cout<<"enter the string "<<endl;
    cin>>str;
    for(int i=0;i<str.length();i++){
       if(str[i]=='('||str[i]=='{'||str[i]=='['){
        s.push(str[i]);
       }
       else if(str[i]==')'){
          if(s.peek()=='('){
            
            s.pop();
          }
          else{
            cout<<"invalid parenthesis"<<endl;
            break;
          }
       }
       else if(str[i]=='}'){
          if(s.peek()=='{'){
            
            s.pop();
          }
          else{
            cout<<"invalid parenthesis"<<endl;
            break;
          }
       }
       else if(str[i]==']'){
          if(s.peek()=='['){
            
            s.pop();
          }
          else{
            cout<<"invalid parenthesis"<<endl;
            break;
          }
       }
    }
}
